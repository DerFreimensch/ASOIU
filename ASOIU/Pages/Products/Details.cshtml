@page
@model DetailsModel

@{
    ViewData["Title"] = "Информация о товаре";
    var photoPath = $"/media/Photo/{@Model.Product.maker.maker}/{Model.Product.ID}.jpg";
}
<div class="row justify-content-center m-3">
    <div class="col col-lg-8">
        <div class="card">
            <div class="card-header">
                <h1>@Model.Product.name</h1>
            </div>
            <div class="card-body cardBodyStyle text-center">
                <div class="row">
                    <div class="col-lg-5" style="border-right: 1px solid rgb(0,0,0,.1)">
                        <img class="card-img-top" src="@photoPath" alt="Photo">
                    </div>

                    <div class="col-lg-7 card-text">
                        <h4 class="text-start">Информация:</h4>
                        <div>
                            @Model.Product.info
                        </div><hr/>
                        <h4 class="align-content-end">Производитель: @Model.Product.maker.maker</h4>
                    </div>
                </div>
                <div class="card-footer">
                    <h3>Цена: @Model.Product.price руб.</h3>
                </div>
            </div>
        </div>
    </div>
</div>